pipeline {
   agent any

    stages {
        stage('Terraform Init') {
            steps {
                dir('terraform'){
                    sh 'terraform init -no-color'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform'){
                    sh 'terraform plan -out terraform.plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform'){
                    sh 'echo "Run Terraform Apply -auto-approve"'
                }
            }
        }
    }
}